{
  "name": "renew-lib",
  "version": "0.1.1",
  "description": "Graphical library for modelling web editors",
  "scripts": {
    "dev": "rollup -cw",
    "karma-chrome": "karma start karma.conf.js --log-level debug --browsers Chrome",
    "karma-firefox": "karma start karma.conf.js --log-level debug --browsers Firefox",
    "lint": "eslint src --fix",
    "prebuild": "eslint src",
    "build": "rollup -c --environment BUILD:production"
  },
  "license": "MIT",
  "repository": "https://github.com/uni-hamburg/renew-lib",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "eslint": "^5.12.0",
    "eslint-config-google": "^0.11.0",
    "eslint-config-renew": "git+https://github.com/uni-hamburg/eslint-config-renew.git",
    "karma": "^3.1.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^2.0.1",
    "rollup": "^1.0.0",
    "rollup-plugin-babel": "^4.2.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-uglify": "^6.0.0"
  },
  "dependencies": {
    "diagram-js": "^3.1.0",
    "renew-formalism": "git+https://github.com/uni-hamburg/renew-formalism.git"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "google",
      "renew"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry"
        }
      ]
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
