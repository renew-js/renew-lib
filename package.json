{
  "name": "renew-lib",
  "version": "0.1.1",
  "description": "Graphical library for modelling web editors",
  "scripts": {
    "dev": "rollup -cw",
    "karma-chrome": "karma start karma.conf.js --log-level debug --browsers Chrome",
    "karma-firefox": "karma start karma.conf.js --log-level debug --browsers FirefoxHeadless",
    "lint": "eslint src --fix",
    "prebuild": "eslint src --fix",
    "build": "rollup -c --environment BUILD:production"
  },
  "huskey": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "license": "MIT",
  "repository": "https://github.com/renew-js/renew-lib",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "css.escape": "git+https://github.com/tim-kilian/css.escape",
    "eslint": "^5.12.1",
    "eslint-config-google": "^0.11.0",
    "eslint-config-renew": "git+https://github.com/renew-js/eslint-config-renew.git",
    "husky": "^1.3.1",
    "jasmine-core": "^3.3.0",
    "karma": "^3.1.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.0",
    "min-dom": "^3.1.1",
    "process-es6": "git+https://github.com/tim-kilian/node-process-es6",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-sass": "^1.1.0",
    "rollup-plugin-uglify": "^6.0.2"
  },
  "dependencies": {
    "bezier-js": "git+https://github.com/tim-kilian/bezierjs",
    "diagram-js": "^3.1.3",
    "diagram-js-direct-editing": "^1.4.0",
    "diagram-js-minimap": "^1.3.0",
    "diagram-js-origin": "^1.2.0",
    "didi": "^4.0.0",
    "renew-formalism": "git+https://github.com/renew-js/renew-formalism.git",
    "svgson": "^3.0.0",
    "tiny-svg": "^2.2.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "google",
      "renew"
    ],
    "rules": {
      "require-jsdoc": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry"
        }
      ]
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
