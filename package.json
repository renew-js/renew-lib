{
  "name": "renew-lib",
  "version": "0.1.1",
  "description": "Graphical library for modelling web editors",
  "scripts": {
    "dev": "rollup -cw",
    "karma-chrome": "karma start karma.conf.js --log-level debug --browsers Chrome",
    "karma-firefox": "karma start karma.conf.js --log-level debug --browsers FirefoxHeadless",
    "lint": "eslint src --fix",
    "prebuild": "npm run lint",
    "build": "webpack --mode=production"
  },
  "huskey": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "license": "MIT",
  "repository": "https://github.com/renew-js/renew-lib",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "eslint": "^5.12.1",
    "eslint-config-google": "^0.11.0",
    "eslint-config-renew": "git+https://github.com/renew-js/eslint-config-renew.git",
    "husky": "^1.3.1",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-webpack": "^3.0.5",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "css-loader": "^2.1.1",
    "min-dom": "^3.1.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "bezier-js": "git+https://github.com/tim-kilian/bezierjs",
    "diagram-js": "^3.1.3",
    "diagram-js-direct-editing": "^1.4.0",
    "diagram-js-minimap": "^1.3.0",
    "diagram-js-origin": "^1.2.0",
    "didi": "^4.0.0",
    "lodash": "^4.17.11",
    "renew-formalism": "git+https://github.com/renew-js/renew-formalism.git",
    "svgson": "^3.0.0",
    "tiny-svg": "^2.2.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "google",
      "renew"
    ],
    "rules": {
      "require-jsdoc": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry"
        }
      ]
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
